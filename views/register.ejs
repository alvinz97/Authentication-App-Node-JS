<div class="row justify-content-center">
    <div class="col-lg-6 m-auto">
        <div class="card card-body text-center">
            <h1><i class="fab fa-node"></i></h1>

            <p>Register</p>

            <%- include('partials/messages.ejs') %> 

            <form action="register" method="post" class="text-left">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter Name" value="<%- typeof name != 'undefined' ? name : '' %>"class="form-control form-control-sm" >
                </div>
                <div class="mb-3">
                    <label class="form-label">User name</label>
                    <input type="text" id="userName" name="userName" placeholder="Enter User Name" value="<%- typeof userName != 'undefined' ? userName : '' %>"class="form-control form-control-sm" >
                </div>

                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <input type="email" id="email" name="email" placeholder="Enter Email Address" value="<%- typeof email != 'undefined' ? email : '' %>"class="form-control form-control-sm" >
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter Password" value="<%- typeof password != 'undefined' ? password : '' %>"class="form-control form-control-sm" >
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" id="password2" name="password2" placeholder="Enter Confirm Password" value="<%- typeof password2 != 'undefined' ? password2 : '' %>"class="form-control form-control-sm" >
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberme">
                    <label for="rememberme" class="form-check-label">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                <div class="mt-3">
                    <p>Already a Member? <a href="login">Login</a> </p>
                </div>
            </form>
        </div>
    </div>
</div>